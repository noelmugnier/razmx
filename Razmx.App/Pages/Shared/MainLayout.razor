@inherits LayoutComponentBase
@namespace Razmx.App.Pages.Shared

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <base href="/"/>
    <HeadOutlet/>
    <link rel="icon" type="image/png" href="favicon.ico"/>
    <link href="~/css/app.min.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10/dist/htmx.min.js" crossorigin="anonymous"></script>
</head>

<body hx-boost="true">
    <div class="bg-white bg-gray-100 flex flex-col h-screen">
        <div class="w-full bg-white px-12 py-4">
            <nav class="flex justify-between items-center w-full max-w-6xl mx-auto">
                <h3>
                    <a href="/" hx-target="#content">Home</a>
                </h3>
                <h3>
                    <a href="/privacy" hx-target="#content">Privacy</a>
                </h3>
            </nav>
        </div>
        <div class="flex flex-grow py-20 px-12">
            <div id="content" class="max-w-6xl mx-auto w-full">
                @Body
            </div>
        </div>
    </div>
</body>

</html>