@page "/contacts"

<HtmxAppPage>
    <HtmxPageTitle>@Title</HtmxPageTitle>
    <h1 class="mb-8 text-3xl font-bold">
        @Title
    </h1>

    <div class="flex items-center justify-between mb-6">
        <div class="">
            <input type="text" class="relative px-6 py-3 w-full rounded shadow focus:shadow-outline border-none" name="ContactSearch" hx-ext="stream" id="ContactSearch" placeholder="Search..." hx-get="/contacts/search" hx-target="#contact-list" hx-trigger="keyup delay:500ms changed"/>
        </div>
        <a href="/contacts/create" hx-target="main" class="px-4 py-3 font-medium rounded bg-blue-500 hover:bg-blue-600 text-white transition">Add contact</a>
    </div>

    <div>
        <div id="contact-list">
            <ContactsTable/>
        </div>
    </div>
</HtmxAppPage>
@code{

    private static string Title = "Contacts";

}