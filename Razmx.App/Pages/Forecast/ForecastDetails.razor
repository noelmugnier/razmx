@inherits HtmxPage
@page "/forecasts/{Id}"
@{
    Title = _value.Summary;
}

<HtmxLayout Layout="@typeof(Main)">
    <PageTitle>@_value.Summary</PageTitle>
    <Forecast Value="_value"/>
</HtmxLayout>

@code
{
    [Parameter] public string Id { get; set; } = string.Empty;

    private WeatherForecast? _value;

    protected override Task OnInitializedAsync()
    {
        _value = new WeatherForecast(new DateOnly(2023, 10, 02), 13, "Sample random", Id);
        return base.OnInitializedAsync();
    }
}